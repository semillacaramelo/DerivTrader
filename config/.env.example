# Deriv API Configuration
DERIV_APP_ID=your_app_id_here                 # Your Deriv App ID
DERIV_API_TOKEN_DEMO=your_demo_token_here     # Demo account API token from deriv.com
DERIV_API_TOKEN_REAL=your_real_token_here     # Real account API token from deriv.com

# Account Settings
DEFAULT_ACCOUNT_TYPE=demo                      # 'demo' or 'real'
ENABLE_SIMULATION=true                         # Set to false for real trading

# Trading Parameters
TRADING_SYMBOL=R_100                          # Symbol to trade (e.g., R_100 for Volatility 100 Index)
STAKE_AMOUNT=10.0                             # Amount to stake per trade
MAX_CONCURRENT_TRADES=1                       # Maximum number of concurrent trades

# Moving Average Strategy Parameters
SHORT_MA_PERIOD=5                            # Short moving average period
MEDIUM_MA_PERIOD=10                          # Medium moving average period
LONG_MA_PERIOD=20                            # Long moving average period
SIGNAL_THRESHOLD=0.5                         # Minimum signal strength to execute trade (0.0 to 1.0)

# Risk Management
MAX_DAILY_LOSS=100.0                         # Maximum allowed loss per day
MAX_DAILY_TRADES=50                          # Maximum number of trades per day

# Logging Configuration
LOG_LEVEL=INFO                               # DEBUG, INFO, WARNING, ERROR, or CRITICAL
LOG_FILE=deriv_bot.log                       # Log file location